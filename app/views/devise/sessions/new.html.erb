<div class="banner-devise">
  <div class="banner-content">
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-sm-4 col-sm-offset-4">
          <div class="form-login">
            <div class="form-header">
              <p>ENTRE PARA FAZER SEUS PEDIDOS</p>
            </div>
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <%= f.error_notification %>
              <div class="form-inputs">
                <%= f.input :email, required: true, autofocus: true, label: "E-mail" %>
                <%= f.input :password, required: true, label: "Senha" %>
              </div>
              <div class="form-actions">
                <%= f.button :submit, "Entrar", class: "btn btn-primary" %>
              </div>
            <% end %>
            <div class="form-links">
              <%= link_to "Cadastre-se", new_registration_path(resource_name), class: "btn" %>
              <%= link_to "Esqueceu a senha?", new_password_path(resource_name), class: "btn" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
