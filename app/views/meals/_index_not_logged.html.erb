<div class="row">

  <div class="col-md-6">
    <div class="menu-body">
      <% @meals.each do |meal| %>
        <div class="menu-item">
          <div class="menu-item-name">
            <%= meal.name %>
          </div>
          <div class="menu-item-price">
            <%=  humanized_money_with_symbol(meal.price) %>
          </div>
          <div class="menu-item-description">
            <%= meal.description  %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<!-- If user is not logged in! -->
  <div class="col-md-6">
    <div class="col-md-8 col-md-offset-2">
      <div class="form-login margin-top-medium">
        <div class="form-header">
          <p>ENTRE PARA FAZER SEUS PEDIDOS</p>
        </div>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= f.error_notification %>
          <div class="form-inputs">
            <%= f.input :email, required: true, autofocus: true, label: "E-mail" %>
            <%= f.input :password, required: true, label: "Senha" %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Entrar", class: "btn btn-primary" %>
          </div>
        <% end %>
        <div class="form-links">
          <%= link_to "Cadastre-se", new_registration_path(resource_name), class: "btn" %>
          <%= link_to "Esqueceu a senha?", new_password_path(resource_name), class: "btn" %>
        </div>
      </div>
    </div>
  </div>
</div>
