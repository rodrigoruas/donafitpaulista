<div class="row">

  <div class="col-md-6">
    <div class="menu-body">
      <% @meals.each do |meal| %>
        <div class="menu-item">
          <div class="menu-item-name">
            <%= meal.name %>
          </div>
          <div class="menu-item-price">
            <%=  humanized_money_with_symbol(meal.price) %>
          </div>
          <div class="menu-item-description">
            <%= meal.description  %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<!-- If user is not logged in! -->
  <div class="col-md-6">
    <div class="row">
      <div class="col-md-10 ">
        <div class="form-login margin-top-medium">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.input :email, required: false, autofocus: true, input_html: { class: 'form-control' }, label: "E-mail" %>
              <%= f.input :password, required: false, input_html: { class: 'form-control' }, label: "Senha" %>
            </div>
            <div class="form-group btn">
              <%= f.button :submit, "Login" %>
            </div>
          <% end %>
          <div class="form-links">
            <%= link_to "Cadastre-se", new_registration_path(resource_name) %>
            <%= link_to "Esqueci a Senha", new_password_path(resource_name) %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
