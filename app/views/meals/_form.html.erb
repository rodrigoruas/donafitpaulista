
<div class="container">
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2">
      <div class="form-login">
        <div class="form-header">
          <p>ADICIONE NOVA REFEIÇÃO</p>
        </div>
        <%= simple_form_for @meal do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :name, required: true, autofocus: true, label: "Título" %>
            <%= f.input :description, required: true, autofocus: true, label: "Descrição" %>
            <%= f.input :price, required: true, autofocus: true, label: "Preço" %>
            <div class="form-check">
              <%= f.input :available, as: :boolean, label: "Disponível para venda", input_html: {class: "form-check-input"} %>
            </div>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Adicionar", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

