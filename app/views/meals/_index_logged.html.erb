<div class="row">
  <div class="col-md-7">
    <div class="menu-body">
      <% @meals.each do |meal| %>
        <div class="menu-item">
          <div class="menu-item-name">
            <%= meal.name %>
          </div>
          <div class="menu-item-price">
            <%=  humanized_money_with_symbol(meal.price) %>
          </div>
          <div class="menu-item-description">
            <%= meal.description  %>
          </div>
          <div class="menu-item-btn">
            <%= link_to "PeÃ§a Aqui", new_meal_order_path(meal), class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-md-5">
    <ul class="list-group">
      <p>Carrinho de Compras</p>
      <% @orders.each do |order| %>
        <li class="list-group-item shop-cart">
          <p><%= order.meal.name  %></p>

          <p><%= order.quantity %></p>
          <p><%= order.quantity * order.meal.price %></p>
        </li>
      <% end %>
    </ul>
    <div class="form-login">
      <%= simple_form_for [@cart] do |f| %>
    </div>

    <div class="menu-item-btn">
      <%= f.button :submit, "Adicionar", class: "btn btn-primary" %>
      <%= link_to "Continuar", orders_path, class: "btn btn-primary" %>
    </div>
    <% end %>

  </div>
</div>

