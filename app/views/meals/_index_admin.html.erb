<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <div class="menu-body">
        <h3>Menu da Administração</h3>
        <div class="menu-header">
          <%= link_to "Adicionar Nova Refeição", new_meal_path, class: "btn btn-primary" %>
          <%= link_to "Ver Todos os Pedidos", orders_path, class: "btn btn-primary" %>
        </div>
        <% @meals.each do |meal| %>
          <div class="menu-item">
            <div class="menu-item-name">
              <%= meal.name %>
            </div>
            <div class="menu-item-price">
              <%=  humanized_money_with_symbol(meal.price) %>
            </div>
            <div class="menu-item-description">
              <%= meal.description  %>
            </div>
            <div class="menu-buttons">
              <div class="menu-item-btn">
                <%= link_to "Editar", edit_meal_path(meal), class: "btn btn-primary" %>
              </div>
              <div class="menu-item-btn">
                <%= link_to 'Remover', meal_path(meal),  method: :delete, data: { confirm: 'Tem Certeza?' },  class: "btn btn-primary" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
